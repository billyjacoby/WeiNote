                <% } else { -%>
                  <a style="right: 10px; top: 32px; cursor: pointer; position: absolute; width: 80%; height: 90%; text-align: right;" href="/note/<%= post._id%>" target="_blank">
                <% } -%>
                <%- include('icon-blog') %>
                </a>
                <div style="height: 20px;"></div>
              <% } -%>
              <%- post.content%>
            </div>
          </div>
        </div>
    <% } -%>
<% } -%>
